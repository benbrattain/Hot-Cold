<div class = 'row top-padding'>

  <div class = 'col-md-12 padding-head' >
    <h1 class = 'text-center c-font bold'>
      Today's (Real) Weather
    </h1>
  </div>

  <div class='row'>
    <div class="col-md-4 col-md-offset-4 top-padding text-center">
      <%= form_for @forecast, url: forecasts_path, html: {class: "navbar-form navbar-nav"} do |f| %>
      <%= f.text_field :zipcode, :placeholder => "Enter Your Zipcode", class: "form-control" %>
      <%= f.submit "Get your Forecast!", class: "btn btn-default" %>
    <% end %>
    </div>
  </div>

  <% if flash[:notice] %>
    <center>
      <div class="notice"><%= flash[:notice] %>
      </div>
    </center>
  <% end %>

  <div class= 'spacer'>
  </div>

</div>