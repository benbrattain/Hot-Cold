<div class = 'row top-padding'>
    <div class = 'col-md-12 padding-head' >
        <h1 class = 'text-center c-font bold'>Right now in <%=@forecast.city %>, <%= @forecast.state %> (<%= @forecast.zipcode%>)<%= %></h1>
        <h1 class = 'text-center'>it is <%=@forecast.now_statement%> </h1>
<!-- <center><h1>From [forecast start time] to [forecast end time]</h1></center>
<center><h1>It will be...<%= %></h1></center>
 -->
    </div>
 </div>
 <div class = 'data-container'>
 <div class = "row top-padding">
    <div class= "col-md-5">
    <div class = "padding">
    <% @data_temps = {
    labels: @forecast.hours , 
    datasets: [
        {
            label: "Forecasted Temperature, F",
            fillColor: "rgba(220,220,220,0.2)",
            strokeColor: "rgba(0,0,0,1)",
            pointColor: "rgba(0,0,0,1)",
            pointStrokeColor: "#fff",
            pointHighlightFill: "#fff",
            pointHighlightStroke: "rgba(0,0,0,1)",
            data: @forecast.temperature
        },
        {
            label: "Actual Temperature, F",
            fillColor: "rgba(151,187,205,0.2)",
            strokeColor: "rgba(178,34,34,1)",
            pointColor: "rgba(178,34,34,1)",
            pointStrokeColor: "#fff",
            pointHighlightFill: "#fff",
            pointHighlightStroke: "rgba(151,187,205,1)",
            data: @forecast.seasonal_index
        }
    ]
}

@options_temps =    {animationEasing: "easeOutElastic",
                    # generateLegend: true,
                    scaleFontSize: 10,
                    responsive: false,
                    datasetFill: false,
                    width: 475,
                    height: 475,
                    scaleLineColor: "rgba(0,0,0,1)",
                    scaleGridLineColor: "rgba(250,128,114,0.1)"
                    } %>

<center><h4 class = 'dash-list'>Forecasted Temperature vs.</h4>
<h4 class = 'dash-list'> What It Actually Will Feel Like</h4></center>
<%= line_chart @data_temps, @options_temps %>
</div>
</div>

<div class= "col-md-2">
</div>

<div class = "col-md-5">
    <div class = "padding">
        <ul class = 'list-group dash-list'>    
        <li>Right now: <img src=<%=@forecast.conditions_icon%> alt="clear"> <%=@forecast.temperature[0]%>F, feels like <%=@forecast.heat_index[0]%>F, <%=@forecast.humidity[0]%>% humidity.</li>
        <li><%= @forecast.discrepancy_statement %></li>
        <li><%= @forecast.t_shirt_statement %></li>
        <li><%= @forecast.uv_statement %></li>
        </ul>
    </div>
</div>

</div>
<br>
<class = "form"><%= form_for @forecast, url: forecasts_path, method: "POST" do |f| %>
    <h4 align="right">
    <%= f.text_field :zipcode, :placeholder => "zipcode" %>
    <%= f.submit "Get another forecast!" %>
    <% end %>
</h4>

<%= link_to "Home", root_path, class: 'button' %>
</div>